#header
    background: color-header-background
    padding-bottom: nav-height
    position: relative

#header-outer
    height: 100%
    position: relative

#header-inner
    position: relative

#header-title
    clearfix()
    text-align: center
    padding: 30px 30px
    .title-wrap, .subtitle-wrap
        float: left
    .title
        font-size: 48px
        color: color-nav-foreground
        text-shadow: 0 1px rgba(0, 0, 0, 0.2)
    .subtitle-wrap
        padding: 10px 0px 0px
        margin-left: 20px
    .subtitle
        font-size: 16px
        font-style: italic
        line-height: 70px
        color: color-nav-foreground
        text-shadow: 0 1px rgba(0, 0, 0, 0.2)
